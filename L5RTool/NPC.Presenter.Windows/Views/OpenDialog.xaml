<StackPanel x:Class="NPC.Presenter.Windows.Views.OpenDialog"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:tv="clr-namespace:System.Windows.Controls;assembly=MultiSelectTreeView"
            prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <tv:MultiSelectTreeView ItemsSource="{Binding References}" SelectedItems="{Binding SelectedItems}"
                                BorderBrush="Transparent">
            <tv:MultiSelectTreeView.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="ObjectReferenceViews.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </tv:MultiSelectTreeView.Resources>
        </tv:MultiSelectTreeView>
    </Grid>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="30 15">
        <Button Content="Open" IsDefault="True" MinWidth="80" MinHeight="18" Margin="0 0 5 0"
                Command="{Binding OpenCommand}" IsEnabled="{Binding CanOpen}"/>
        <Button Content="Cancel" IsCancel="True" MinWidth="80" MinHeight="18"/>
    </StackPanel>
</StackPanel>
